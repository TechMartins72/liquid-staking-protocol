{
  "name": "@hydra/hydra-stake-protocol",
  "version": "0.1.0",
  "license": "MIT",
  "type": "module",
  "main": "index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "yarn@4.9.2",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "compact": "compact compile --skip-zk src/hydra-stake-protocol.compact ./src/managed/hydra-stake-protocol",
    "compact-dev": "compact compile src/hydra-stake-protocol.compact ./src/managed/hydra-stake-protocol",
    "build": "rm -rf dist && tsc --project tsconfig.build.json && cp -R ./src/managed ./dist/managed && cp ./src/hydra-stake-protocol.compact dist",
    "prebuild": "rm -rf dist && tsc --project tsconfig.build.json && cp -R ./src/managed ./dist/managed && cp ./src/hydra-stake-protocol.compact dist",
    "lint": "eslint src",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepack": "yarn build",
    "test": "vitest"
  },
  "devDependencies": {
    "eslint": "^9.27.0",
    "jest": "^29.7.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.1"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
